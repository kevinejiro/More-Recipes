{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "A platform for users to share their recipe ideas with the world",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/bin/www.js",
    "start:dev": "nodemon --exec babel-node server/bin/www",
    "test:local": "cross-env NODE_ENV=test_local&& npm run migrate:undo&& npm run migrate&& nyc mocha server/test/test.js --compilers js:babel-core/register",
    "test:db": "set NODE_ENV=test && sequelize db:migrate:undo:all&&sequelize db:migrate && cross-env NODE_ENV=test nyc mocha server/test/test.js", 
    "test": "cross-env NODE_ENV=test mocha --compilers js:babel-core/register server/test/test.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "node ./node_modules/babel-cli/bin/babel.js -d ./dist ./server",
    "coveralls": "nyc npm test&& nyc report --reporter=text-lcov | coveralls",
    "migrate": "node ./node_modules/sequelize-cli/bin/sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo:all",
    "heroku-postbuild": "npm run build && npm run migrate"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "author": "Ejiro",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.0",
    "morgan": "^1.9.0",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.8.0",
    "sequelize-cli": "^2.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.12.1",
    "nyc": "^11.2.1",
    "supertest": "^3.0.0"
  }
}
